<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/registerToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_red"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="@string/register_title"
        app:titleTextColor="@color/white"
        app:navigationIcon="@drawable/ic_profile_w" />

    <!-- Scrollable content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:background="@color/main_background_red">

        <LinearLayout
            android:orientation="vertical"
            android:padding="24dp"
            android:paddingTop="60dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_background_red">

            <!-- Card for register fields -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/background_red">

                    <!-- Username -->
                    <EditText
                        android:id="@+id/etUsername"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/username_hint"
                        android:textColorHint="@color/white"
                        android:background="@drawable/bg_background_framed"
                        android:padding="12dp"
                        android:layout_marginBottom="16dp"
                        android:inputType="textPersonName" />

                    <!-- Email -->
                    <EditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/email_hint"
                        android:textColorHint="@color/white"
                        android:background="@drawable/bg_background_framed"
                        android:padding="12dp"
                        android:layout_marginBottom="16dp"
                        android:inputType="textEmailAddress" />

                    <!-- Height & Weight -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_marginBottom="16dp">

                        <EditText
                            android:id="@+id/etHeight"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="@string/height_hint"
                            android:textColorHint="@color/white"
                            android:background="@drawable/bg_background_framed"
                            android:padding="12dp"
                            android:inputType="numberDecimal"
                            android:layout_marginEnd="8dp"/>

                        <EditText
                            android:id="@+id/etWeight"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="@string/weight_hint"
                            android:textColorHint="@color/white"
                            android:background="@drawable/bg_background_framed"
                            android:padding="12dp"
                            android:inputType="numberDecimal"/>
                    </LinearLayout>

                    <!-- Date of Birth -->
                    <EditText
                        android:id="@+id/etDob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/dob_hint"
                        android:textColorHint="@color/white"
                        android:background="@drawable/bg_background_framed"
                        android:padding="12dp"
                        android:drawableEnd="@drawable/ic_calendar"
                        android:focusable="false"
                        android:clickable="true"
                        android:layout_marginBottom="16dp"/>

                    <!-- Phone Number -->
                    <EditText
                        android:id="@+id/etPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/phone_hint"
                        android:textColorHint="@color/white"
                        android:background="@drawable/bg_background_framed"
                        android:padding="12dp"
                        android:inputType="phone"
                        android:layout_marginBottom="16dp"/>

                    <!-- Password -->
                    <EditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/password_hint"
                        android:textColorHint="@color/white"
                        android:background="@drawable/bg_background_framed"
                        android:padding="12dp"
                        android:drawableEnd="@drawable/ic_visibility"
                        android:inputType="textPassword"
                        android:layout_marginBottom="20dp"/>

                    <!-- Register button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnRegister"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/register_button"
                        android:textColor="@color/white"
                        app:backgroundTint="@null"
                        android:background="@drawable/bg_background_framed"
                        android:textStyle="bold"
                        android:layout_marginTop="30dp"/>

                    <!-- Already have account link -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/already_have_account"
                            android:textColor="@color/white"/>

                        <Button
                            android:id="@+id/btnLoginNav"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center"
                            android:minWidth="48dp"
                            android:minHeight="48dp"
                            android:padding="12dp"
                            android:text="@string/login_button"
                            android:textColor="@color/main_background_red"
                            android:textStyle="bold"
                            app:backgroundTint="@android:color/transparent" />

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
